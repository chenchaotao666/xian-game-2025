{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "ES2023.Array"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/helper/*.(ts|tsx)"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
